<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- <bean/> definitions here -->

	<bean name="b1" class="com.model.Employee">
		<property name="id" value="1" />
		<property name="name" value="krishna" />
		<property name="gender" value="male" />
		<property name="salary" value="39444" />
		<property name="address" ref="add" />

	</bean>


	<bean id="b2" class="com.model.Employee">
		<constructor-arg name="id" value="2" />
		<constructor-arg name="name" value="anna" />
		<constructor-arg name="gender" value="female" />
		<constructor-arg name="salary" value="43647" />
		<constructor-arg ref="add" />
	</bean>


	<bean name="add" class="com.model.Address">
		<property name="city" value="Aligarh" />
		<property name="hNO" value="103" />
		<property name="state" value="UP" />
	</bean>

</beans>